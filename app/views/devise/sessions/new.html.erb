<h2>Log in</h2>
<%= form_for(resource, as: resource_name, :html => { :class => "form-horizontal" }, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-offset-2 col-sm-3 control-label">Email</label>
    <div class="col-sm-3"><%= f.text_field :email, :placeholder => 'Email', :autofocus => true, :class => "form-control" %></div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-offset-2 col-sm-3 control-label">Password</label>
    <div class="col-sm-3"><%= f.password_field :password, :placeholder => 'Password', :class => "form-control" %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-2">
      <%= f.submit "Sign in",:class=>'btn btn-default' %>
    </div>
  </div>
<% end -%>
